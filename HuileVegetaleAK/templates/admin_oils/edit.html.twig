{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<div class="section">
		<div class="form-login">
			<h1 class="section-title">Modifier l'huile :
				{{oil.name}}</h1>
			<div class="form-container">

				{{ form_start(form) }}
				<div class="form-input">
					{{form_row(form.name)}}</div>
				<div class="form-input">
					{{form_row(form.description)}}</div>
				<div class="form-input">
					{{form_row(form.capacity)}}</div>
				<div class="form-input">{{form_row(form.price)}}</div>
				<div class="form-input">
					{{form_row(form.active)}}</div>
				<div class="form-input">
					{{form_row(form.family)}}</div>
				<div class="form-input">
					{{form_row(form.images)}}</div>
				<button class="button">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form) }}
			</div>

			<div class="form-content">
				{% for image in oil.images %}
					<div><img style="width:100%; height:100px; object-fit:cover;" src="{{ asset('/uploads/'~ image.name)}}" alt="Image">
						<a class="button submit" href="{{ path('oils_delete_image', {'id': image.id}) }} " data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
					</div>
					
				{% endfor %}
			</div>

		</div>
	</div>


{% endblock %}
{% block javascripts %}
	<script src="{{asset('js/main.js')}}"></script>
	<script src="{{asset('js/images.js')}}"></script>
{% endblock %}