{% extends 'base.html.twig' %}

{% block title %}Edit Family
{% endblock %}

{% block body %}


	<div class="section">
		<div class="form-login">
			<h1 class="section-title">Modifier la famille :
				{{family.name}}</h1>
			<div class="form-container">

				{{ form_start(form) }}
				<div class="form-input">
					{{form_row(form.name)}}</div>
				<div class="form-input">
					{{form_row(form.active)}}</div>
				<div class="form-input">
					{{form_row(form.story)}}</div>
				<button class="button">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
