{% extends 'base.html.twig' %}

{% block title %}Family{% endblock %}

{% block body %}
    <h1>Family</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ family.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ family.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ family.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Story</th>
                <td>{{ family.story }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_families_index') }}">back to list</a>

    <a href="{{ path('admin_families_edit', {'id': family.id}) }}">edit</a>

    {{ include('admin_families/_delete_form.html.twig') }}
{% endblock %}
