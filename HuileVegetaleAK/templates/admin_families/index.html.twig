{% extends 'base.html.twig' %}

{% block title %}Family index{% endblock %}

{% block body %}
    <h1>Family index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>Story</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.id }}</td>
                <td>{{ family.name }}</td>
                <td>{{ family.active ? 'Yes' : 'No' }}</td>
                <td>{{ family.story }}</td>
                <td>
                    <a href="{{ path('admin_families_show', {'id': family.id}) }}">show</a>
                    <a href="{{ path('admin_families_edit', {'id': family.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_families_new') }}">Create new</a>
{% endblock %}
