{% extends "base.html.twig" %}
{% block title %}
	{{title}}
{% endblock %}
{% block body %}

	<div class="section">


		<div class="product-container">
			<div class="product">
				<div class="product-img-alt display-desktop">
					{% for image in oil.images %}
						<img style="height:250px; object-fit:contain;" src=" {{ asset('uploads/'~ image.name)}} ">
					{% endfor %}
				</div>
				<div class="product-img display-mobile">
					<ul>
						{% for image in oil.images|slice(0,1)  %}
							<li><img style="width:300px;height:100%; object-fit:contain;" src=" {{ asset('uploads/'~ image.name)}} "></li>
						{% endfor %}
					</ul>
				</div>
				<div class="product-img slideshow display-desktop">
					<ul>
						{% for image in oil.images  %}
							<li><img style="width:300px;height:400px; object-fit:contain;" src=" {{ asset('uploads/'~ image.name)}} "></li>
						{% endfor %}
					</ul>
				</div>
				<div class="product-info">
					<h2>{{oil.name}}</h2>
					<p>{{oil.description}}</p>
					<div class="payer">
						<span class="price">{{oil.price}}
							â‚¬</span>
						<div class="capacity">
							<span>25</span>
							<span class="selected">50</span>
							<span>100</span>
						</div>
						<div class="quantity">
							<span>-</span>
							<span>1</span>
							<span>+</span>
						</div>
						<a href="#" class="buy">Acheter</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
