{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}

	<div class="section">
		<div class="container grid">

			<h1 class="section-title">Le blog</h1>
			<div class="blog-container">
				<div class="blog-info">

					{% for article in articles %}
						<h2>{{article.title}}</h2>
						<p>{{article.createdAt|date("d/m/Y")}}</p>

						<p>{{article.content}}</p>

						<a href="{{path('blog_read',{id:article.id})}}">Voir cet article</a>
					{% endfor %}


				</div>
			</div>


		</div>
	</div>

{% endblock %}
