{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<div class="section">
		<div class="container grid">

			<h1 class="section-title">{{title}}</h1>
			{% for article in articles %}
				<div class="blog-container">
					<div class="blog-img">
			
					</div>

					<div class="blog-info">
						<h2>{{article.title}}</h2>

						<p>{{article.createdAt|date("d/m/Y")}}</p>
						<p>{{article.content}}</p>
					</div>
					<div class="blog-buttons">
						<a href="{{path('blog_read', {'id': article.id})}}">
							<button class="button submit">En voir plus</button>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
